<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/movieName"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/movieTitle"
            android:layout_below="@+id/movieTitle"
            android:layout_marginTop="27dp"
            android:text="@string/textview"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/overView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/userRating"
            android:layout_below="@+id/userRating"
            android:layout_marginTop="39dp"
            android:fontFamily="sans-serif"
            android:text="@string/textview"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/userRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/movieTitle"
            android:layout_below="@+id/movieTitle"
            android:layout_marginTop="81dp"
            android:text="@string/textview"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/movieName"
            android:layout_marginStart="112dp"
            android:layout_marginTop="22dp"
            android:text="@string/textview"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/movieTitle"
            android:layout_marginStart="11dp"
            android:contentDescription="@string/titlename"
            android:text="@string/title"
            android:textColor="@android:color/holo_blue_bright" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/releaseDate"
            android:layout_alignBottom="@+id/releaseDate"
            android:layout_alignStart="@+id/textView2"
            android:contentDescription="@string/releasedate"
            android:text="@string/release_date"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignTop="@+id/userRating"
            android:contentDescription="@string/ratingofmovie"
            android:text="@string/rating"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignTop="@+id/overView"
            android:text="@string/plot"
            android:textColor="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/trailerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:text="@string/textview"
            />

    </RelativeLayout>


</ScrollView>